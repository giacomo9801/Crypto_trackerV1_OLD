<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activitymain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283342"
    tools:context=".MainActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#2c4761"
        android:contentDescription="FAB"
        android:elevation="@android:dimen/app_icon_size"
        android:src="@android:drawable/ic_popup_sync"
        app:borderWidth="0dp"
        app:elevation="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2c4761"
            android:orientation="vertical">

            <Button
                android:id="@+id/editbtnbtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:text="Crypto Tracker"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/editbtnbtt"
                android:layout_margin="12dp"
                android:columnCount="2"
                android:rowCount="4">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardastar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/astar" />

                        <TextView
                            android:id="@+id/nomeAstar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome Crypto"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitaastar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzoastar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totaleastar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardbtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/btt" />

                        <TextView
                            android:id="@+id/nomeBtt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOME"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitabtt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzobtt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalebtt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardatom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/cosmos_hub" />

                        <TextView
                            android:id="@+id/nomeAtom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHAT"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitaatom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzoatom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totaleatom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/carddot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/dot" />

                        <TextView
                            android:id="@+id/nomeDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALENDAR"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitadot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzodot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totaledot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardhuahua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/huahua" />

                        <TextView
                            android:id="@+id/nomeHuahua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WIDGETS"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitahuahua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzohuahua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalehuahua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardjuno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/juno" />

                        <TextView
                            android:id="@+id/nomeJuno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INFO"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitajuno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzojuno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalejuno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardosmo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/osmo" />

                        <TextView
                            android:id="@+id/nomeOsmo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOME"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitaosmo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzoosmo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totaleosmo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardsecret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#3fa1eb"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/secret" />

                        <TextView
                            android:id="@+id/nomeScrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOME"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantitascrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantità"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/prezzoscrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo "
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalescrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totale"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </GridLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/md_white_1000"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/euro" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Totaltextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Dati..."
                    android:textColor="@color/md_white_1000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>